<h1>New Bakery Form</h1>
<div class='callout'>
<%= form_for(@bakery, html: { class: 'form'}) do |f| %>

  <% if @bakery.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@bakery.errors.count, "error") %> prohibited this bakery from being saved:</h4>

      <ul>
        <% @bakery.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
